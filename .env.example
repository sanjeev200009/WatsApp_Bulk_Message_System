# Environment
ENV=test

# WhatsApp Cloud API Configuration
PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_TOKEN=your_access_token_here
WA_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WA_API_VERSION=v21.0

# Brevo (Sendinblue) Configuration
# Get your API key from https://app.brevo.com/settings/keys/api
BREVO_API_KEY=xkeysib-your-key-here
# Optional: ID of the list to fetch contacts from (deprecated - use EXPERIENCE_LIST_MAP for job campaigns)
BREVO_LIST_ID=
# The attribute where phone number is stored (usually SMS or WHATSAPP)
BREVO_PHONE_ATTRIBUTE=SMS
# The attribute that marks a user as opted out (boolean)
BREVO_OPT_OUT_ATTRIBUTE=OPT_OUT

# Experience-Level Targeting (Job Campaigns)
# Map experience levels to Brevo list IDs - JSON format
# Example: EXPERIENCE_LIST_MAP={"junior":123, "mid":456, "senior":789}
EXPERIENCE_LIST_MAP=

# Job Campaign ID (required in production)
# Unique campaign ID to prevent duplicate sends.
# USE THE SAME ID to finish a list tomorrow. CHANGE THE ID for a new job.
# Example: JOB_CAMPAIGN_ID=MY-UNIQUE-JOB-ID
JOB_CAMPAIGN_ID=

# WhatsApp Template Configuration
TEMPLATE_NAME=your_approved_template_name
# Optional: Different templates per experience level
TEMPLATE_NAME_JUNIOR=
TEMPLATE_NAME_MID=
TEMPLATE_NAME_SENIOR=
LANGUAGE_CODE=en
IMAGE_URL=https://example.com/path/to/your/image.jpg

# Rate Limiting Configuration
DAILY_LIMIT=100
SEND_DELAY_SECONDS=5
MAX_RETRIES=2
RETRY_BACKOFF_SECONDS=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/whatsapp_marketing.log
RESULT_LOG_FILE=logs/send_results.jsonl
